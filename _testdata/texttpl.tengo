fmt := import("fmt")
os := import("os")
io := import("io")
template := import("text/template")

// display message
//fmt.println("Hello from tengo")

// open file
fd := os.create("_testdata/texttpl.out")
if is_error(fd) {
    fmt.println("error-fd: ", fd)
}

// create template
letter := `
Dear {{.Name}},
{{if .Attended}}
It was a pleasure to see you at the wedding.
{{- else}}
It is a shame you couldn't make it to the wedding.
{{- end}}
{{with .Gift -}}
Thank you for the lovely {{.}}.
{{end}}
Best wishes,
Josie
`

tpl := template.parse("letter", letter)
if is_error(tpl) {
    fmt.println("error-tpl: ", tpl)
}
//fmt.println("TEMPLATE: ", tpl)

data := {
    Name: "Kuro",
    Gift: "Good boy",
    Attend: true
}

// execute template, display to stdout
tpl.execute(io.stdout, data)

// execute the template
ret := tpl.execute(fd.write, data)
if is_error(ret) {
    fmt.println("error execute template: ", ret)
}

// close file
fd.close()

// experiments with template object
tp2 := tpl.clone()
data.Name = "Rocky"
res := tp2.execute_string(data)
fmt.println("=====")
fmt.println(res)
fmt.println("=====")

res = template.execute_string("other_letter", letter, data)
fmt.println("****** EXEC ******")
fmt.println(res)
